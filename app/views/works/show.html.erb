<h1>作品詳細ページ</h1>

<div class="work-field">
  <div class="work-image">
    <% @work.images.each do |work| %>
      <%=image_tag work, height:"400px" %>
    <% end %>
  </div>
  <div class="work-info">
    <div class="work-title">
      <h3>
        <%= @work.title %>
      </h3>
    </div>
    <div class="work-description">
      <h4>
        <%= @work.description %>
      </h4>
    </div>
  </div>
</div>

<%= link_to "戻る", root_path %>
<!DOCTYPE HTML>
<html>
  <head>
    <title>Hachi App</title>
  </head>

  <body>

    <h1>top page </h1>

    <div class="works">
      <h2>
        作品一覧
      </h2>
      <div>
        <%= form_with(url: search_works_path, local: true, method: :get, class: "search_form") do |f| %>
          <%= f.text_field :keyword, placeholder: 'キーワード検索', class: "search_input" %>
          <%= f.submit '検索', class: "search_btn" %>
        <% end %>
      </div>
      <ul class="work-lists">
      <% @works.each do |work| %>
        <li>
          <div class="work-image">
            <%= link_to image_tag(work.images[0], height:"250px"), work_path(work.id) %>
          </div>
          <div class="work-info">
            <h4 class="work-title">
              <%= work.title %>
            </h4>
            <h5 class="work-description">
              <%= work.description %>
            </h5>
          </div>
        </li>
      <% end %>
      </ul>
    </div>

    <footer>
    </footer>
  </body>

</html>
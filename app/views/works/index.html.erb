<div class="works">
  <div class="work_table">
    作品一覧
  </div>
  <div class="search_form">
    <%= form_with(url: search_works_path, local: true, method: :get) do |f| %>
      <%= f.text_field :keyword, placeholder: 'キーワード検索', class: "search_input" %>
      <%= f.submit '検索', class: "search_btn" %>
    <% end %>
  </div>
  <<div class="work_lists_field">
    <ul class="work_lists">
      <% @works.each do |work| %>
        <li class="work_list">
          <div class="work-image">
            <%= link_to image_tag(work.images[0], height:"250px"), work_path(work.id) %>
          </div>
          <div class="work-info">
            <div class="work-title">
              <span class="work_title_font"><%= work.title %></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
